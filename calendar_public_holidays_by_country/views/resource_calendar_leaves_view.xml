<odoo>
    <record id="resource_calendar_leaves_tree_inherit" model="ir.ui.view">
        <field name="name">resource.calendar.leaves.list.inherit</field>
        <field name="model">resource.calendar.leaves</field>
        <field
            name="inherit_id"
            ref="hr_holidays.resource_calendar_leaves_tree_inherit"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_to']" position="after">
                <field name="country_id" />
            </xpath>
        </field>
    </record>

    <record id="resource_calendar_leave_form" model="ir.ui.view">
        <field name="name">resource.calendar.leaves.form</field>
        <field name="model">resource.calendar.leaves</field>
        <field name="inherit_id" ref="resource.resource_calendar_leave_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='leave_dates']" position="inside">
                <field name="country_id" />
            </xpath>
        </field>
    </record>
</odoo>
